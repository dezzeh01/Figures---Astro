---
import { Icon } from 'astro-icon/components';
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Dez. All rights reserved.
	<div class="social-links">
<a href="https://bsky.app/profile/dezzeh.bsky.social" target="_blank" rel="noopener noreferrer">
			<span class="sr-only">Follow me on Bluesky</span>
			<Icon 
				name="simple-icons:bluesky" 
				class="w-8 h-8 text-blue-500 hover:text-blue-600" 
				aria-hidden="true" 
			/>
		</a>
		<a href="https://x.com/d3zz3h" target="_blank" rel="noopener noreferrer">
			<span class="sr-only">Follow me on Twitter</span>
			<Icon 
				name="simple-icons:twitter" 
				class="w-8 h-8 text-sky-500 hover:text-sky-600" 
				aria-hidden="true" 
			/>
		</a>				
	</div>
</footer>
<style>
	footer {
  		padding: 2em 1em 3em 1em;
  		background: linear-gradient(135deg, #ff0080, #302b63, #0f0c29); /* synthwave gradient */
  		color: #f0f0f0; /* light text for contrast */
  		text-align: center;
  		box-shadow: inset 0 2px 10px rgba(255, 0, 128, 0.6); /* subtle neon glow */
	}

	.social-links {
 		display: flex;
  		justify-content: center;
  		gap: 1em;
  		margin-top: 1em;
	}

	.social-links a {
  		text-decoration: none;
  		color: #ff77cc; /* neon pink */
  		transition: color 0.3s ease;
	}

	.social-links a:hover {
  		color: #ff00cc; /* brighter neon pink on hover */
	}

</style>
