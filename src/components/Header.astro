---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Icon } from 'astro-icon/components';
---

<header>
<div class="social-links">
<a href="https://bsky.app/profile/dezzeh.bsky.social" target="_blank" rel="noopener noreferrer">
			<span class="sr-only">Follow me on Bluesky</span>
			<Icon 
				name="simple-icons:bluesky" 
				class="w-8 h-8 text-blue-500 hover:text-blue-600" 
				aria-hidden="true" 
			/>
		</a>
		<a href="https://x.com/d3zz3h" target="_blank" rel="noopener noreferrer">
			<span class="sr-only">Follow me on Twitter</span>
			<Icon 
				name="simple-icons:twitter" 
				class="w-8 h-8 text-sky-500 hover:text-sky-600" 
				aria-hidden="true" 
			/>
		</a>				
	</div>
</header>
<style>
	header {
  margin: 0;
  padding: 0 1em;
  background: linear-gradient(135deg, #0f0c29, #302b63, #ff0080);
  box-shadow: 0 2px 8px rgba(var(--black), 0.05);
  color: rgb(var(--gray-light)); /* optional: text color adjustment */
}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
  		padding: 1em 0.5em;
  		color: rgb(var(--gray-light));
  		border-bottom: 4px solid transparent;
  		text-decoration: none;
	}

	nav a.active {
  		border-bottom-color: var(--accent);
	}
	.social-links {
 		display: flex;
  		justify-content: center;
  		gap: 1em;
  		margin-top: 1em;
	}

	.social-links a {
  		text-decoration: none;
  		color: #ff77cc; /* neon pink */
  		transition: color 0.3s ease;
	}

	.social-links a:hover {
  		color: #ff00cc; /* brighter neon pink on hover */
	}
</style>
